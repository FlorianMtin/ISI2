{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
{% for article in articles %}
<article>
    
                            
            <div class="thumbnail">
                                        
                <div class="caption">
                    <h3><a id="Text_Title_Article_Layout" class="articleTitle" href="/article/{{ article.id }}">{{ article.title }}</a></h3>
                    <img src="/img/{{ article.image }}" class="img-responsive" alt ="image de l'article"/>                                                                                               
                </div>          
            </div>
    
    
</article>
{% endfor %}
{% endblock %}